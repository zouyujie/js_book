  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    ,
    {
      "name": "使用本机 Chrome 调试",
      "type": "chrome",
      "request": "launch",
      "file": "${file}",
      // "runtimeExecutable": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe", // 改成您的 Chrome 安装路径
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      "userDataDir": "${tmpdir}",
      "port": 5500
    }
  ]
}
